
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Home/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/css/editprofile.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/js/registerComponents.js"></script>
    <script src="~/Content/js/editProfile.js"></script>
}
<div class="flex h-center">
    <div class="container">
        <div class="white-box">
            <form autocomplete="off">
                <div class="top-header align-left p15">Profilimi Düzenle</div>
                <div class="align-center fs-14 p15">Adınızı soyadınızı düzenleyin</div>
                <div class="flex h-stretch-100 pb15 pl15 pr15">
                    <input type="text" class="input one mr7" name="newName" value="@{Html.RenderAction("Name", "Home");}" placeholder="Yeni Adınız" readonly />
                    <input type="text" class="input one ml7" name="newSurname" value=" @{Html.RenderAction("Surname", "Home");}" placeholder="Yeni Soyadınız" readonly />
                </div>
                <div class="align-center fs-14 pb15 pr15 pl15">Şifrenizi düzenleyin</div>
                <div class="flex h-stretch-100 pb15 pl15 pr15">
                    <div class="ml7"><form-input valid-type="password" name="newPassword" placeholder="Yeni Şifreniz"></form-input></div>
                    
                </div>
                <div class="align-center fs-14 pb15 pr15 pl15">E-mail adresinizi düzenleyin</div>
                <div class="flex h-stretch-100 pb15 pl15 pr15">
                    <input type="text" class="input one ml7" name="newMail" value="@{Html.RenderAction("Mail", "Home");}" placeholder="Yeni mail adresiniz" readonly />
                </div>
                <div class="info-boxes error mr15 ml15 mb15 none json" id="editJsonInfo"></div>
                <div class="align-center pb15 pl15 pr15">
                    <button id="edit" class="btn btn-main btn-blue spinner">
                        <span class="spinner"></span>Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
