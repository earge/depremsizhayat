@using DepremsizHayat.DTO.Admin;
@using DepremsizHayat.DataAccess;
@model List<RoleRequest>
@{
    ViewBag.Title = "ListUserRoles";
    Layout = "~/Views/Panel/Shared/Layout_.cshtml";
}



<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Listesi</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mevcut Rol</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-Posta</th>
                        <th>Kullanılabilir Roller</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RoleRequest user in Model)
                    {
                        <tr>
                            <form method="POST" action="EditRoles">
                                @Html.Hidden("USER_ACCOUNT_ID",user.USER_ACCOUNT_ID)
                                <td>@user.CURRENTROLE.NAME</td>
                                <td>@user.FIRST_NAME</td>
                                <td>@user.LAST_NAME</td>
                                <td>@user.E_MAIL</td>
                                <td>
                                    <span class="badge bg-danger">
                                        <select class="roles" name="ROLE_ID">
                                            @foreach (ROLE role in user.AVAILABLEROLES)
                                            {
                                                <option value="@role.ROLE_ID">
                                                    @role.NAME
                                                </option>
                                            }
                                        </select>
                                    </span>
                                    <button><i class="fas fa-check" style="margin-left:5px;color:green;"></i></button>
                                </td>
                            </form>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("Shared/_StatusPartial")
        </div>
   
        <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>
</div>